<?xml version="1.0" encoding="utf-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="This"
             x:Class="DeviceFX.NfcApp.Views.Shared.LabelCheckboxView">
    <Border Stroke="Transparent">
        <HorizontalStackLayout>
            <CheckBox Scale="1.75" IsChecked="{Binding IsToggled, Source={x:Reference This}}" Margin="0,0,10,0"></CheckBox>
            <Label Text="{Binding LabelText, Source={x:Reference This}}" FontSize="22" VerticalOptions="Center"/>
        </HorizontalStackLayout>
    </Border>
</ContentView>