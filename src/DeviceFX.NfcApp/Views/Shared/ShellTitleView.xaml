<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Name="This"
             x:Class="DeviceFX.NfcApp.Views.Shared.ShellTitleView">
    <Grid VerticalOptions="Center" HeightRequest="44" ColumnDefinitions="44,*,44">
        <Grid.Padding>
            <OnPlatform x:TypeArguments="Thickness">
                <On Platform="Android" Value="16,0"/>
            </OnPlatform>
        </Grid.Padding>
        <ImageButton x:Name="SettingsButton"
            Source="{Binding Settings.ImageSource}"
            Command="{Binding OpenSettingsCommand}"
            CornerRadius="22"
            WidthRequest="32"
            HeightRequest="32"
            HorizontalOptions="End">
        </ImageButton>
        <Label Grid.Column="1"
               FontSize="Large"
               FontAttributes="Bold"
               HorizontalTextAlignment="Center"
               VerticalTextAlignment="Center"
               Text="{Binding Title}" />
        <ImageButton 
            Grid.Column="2"
            IsVisible="False"
            x:Name="OperationButton"
            Source="recycle_icon.png"
            Command="{Binding OperationCommand}"
            WidthRequest="32"
            HeightRequest="32"
            HorizontalOptions="Start">
            <Image.Behaviors>
                <toolkit:IconTintColorBehavior TintColor="{Binding Operation.TintColor}" />
            </Image.Behaviors>
        </ImageButton>
    </Grid>
</ContentView>